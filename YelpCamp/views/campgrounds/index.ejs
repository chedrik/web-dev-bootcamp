<% layout('layouts/boilerplate') %>

<div>
    <a href="/campgrounds/new">Create a new campground</a>
</div>
<ul>
    <% for (let c of grounds) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img src="<%= c.images[0].url %>" class="card-img-top img-fluid" alt="Image for <%= c.title %>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <a class="card-title" href="campgrounds/<%= c._id %>"><%= c.title %></a>
                    <p class="card-text"><%= c.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= c.location %></small>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</ul>