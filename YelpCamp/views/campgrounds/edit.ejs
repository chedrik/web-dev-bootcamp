<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center mb-3">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= grounds._id%>?_method=PUT" method="POST" class="validated-form" novalidate
            enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label for="title">Title</label>
                <!-- the square brackets group content in the json resp of form -->
                <input class="form-control" type="text" name="campground[title]" id="title" value="<%= grounds.title %>"
                    required>
            </div>

            <div class="form-group mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location"
                    value="<%= grounds.location %>" required>
            </div>

            <div class="form-group mb-3">
                <label for="img" class="form-label">Images</label>
                <input class="form-control" name="image" type="file" id="img" multiple>
            </div>

            <div class="form-group mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" rows="3" required
                    name="campground[description]"><%= grounds.description %></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="price-label" required>$</span>
                    </div>
                    <input type="text" class="form-control" placeholder="0.00" aria-label="price" id="price"
                        aria-describedby="price-label" name="campground[price]" value="<%= grounds.price %>" required>
                </div>
            </div>

            <div class="mb-3">
                <% grounds.images.forEach(function(img,i) { %>
                <img src="<%= img.url %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="img-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
                    <label for="img-<%=i%>">Delete?</label>
                </div>
                <% }) %>
            </div>

            <div class=" mb-3">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <a href="/campgrounds/<%= grounds._id %>">Go back to details</a>
    </div>
</div>