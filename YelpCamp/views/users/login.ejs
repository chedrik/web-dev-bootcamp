<% layout('layouts/boilerplate') %>

<title>Login</title>

<div class="container justify-content-center align-items-center mt-5">
    <div class="row align-items-center">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://trumpwallpapers.com/wp-content/uploads/Camping-Wallpaper-08-1920x1080-1-1536x864.jpg"
                    alt="Campground image" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="form-group mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" name="username" id="username" autofocus required>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" name="password" id="password" required>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-6">
                                <button class="w-100 btn btn-success">Login</button>
                            </div>
                            <div class="col-4">
                                <a href="/register" class="w-100 btn btn-secondary">Sign up</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>